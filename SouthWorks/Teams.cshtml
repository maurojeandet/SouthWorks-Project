@{
    ViewData["Title"] = "Teams";
}
<h1><strong>All teams organized by group</strong></h1>
<span></span>

@* Libraries from bootstrap and jquery *@
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@* Class container that has the carousel slide and defines the size of the images*@
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @* Carousel slide method with list of items to slide*@
                <div id="myTeams" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#myTeams" data-slide-to="0" class="active"></li>
                        <li data-target="#myTeams" data-slide-to="1"></li>
                        <li data-target="#myTeams" data-slide-to="2"></li>
                        <li data-target="#myTeams" data-slide-to="3"></li>
                        <li data-target="#myTeams" data-slide-to="4"></li>
                        <li data-target="#myTeams" data-slide-to="5"></li>
                        <li data-target="#myTeams" data-slide-to="6"></li>
                        <li data-target="#myTeams" data-slide-to="7"></li>
                    </ol>
                    @* List of images to slide in the carousel*@
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/images/groupA.svg" alt="GroupA" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoB.svg" alt="GroupB" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoC.svg" alt="GroupC" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoD.svg" alt="GroupD" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoE.svg" alt="GroupE" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoF.svg" alt="GroupF" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoG.svg" alt="GroupG" />
                        </div>
                        <div class="item">
                            <img src="~/images/grupoH.svg" alt="GroupH" />
                        </div>

                    </div>
                    @* Left button for sliding *@
                    <a class="left carousel-control" href="#myTeams" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    @* Right button for sliding *@
                    <a class="right carousel-control" href="#myTeams" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>